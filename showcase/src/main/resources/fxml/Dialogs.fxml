<?fxml version="1.0" encoding="utf-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<ScrollPane fitToWidth="true"
            fx:controller="com.zenjava.samples.simpleflow.DialogsActivity"
            xmlns:fx="http://javafx.com/fxml">
    <content>
        <VBox>
            <styleClass><String fx:value="page"/><String fx:value="dialogs"/></styleClass>

            <children>
                <Label text="%dialogs.title">
                    <styleClass><String fx:value="label"/><String fx:value="title"/></styleClass>
                </Label>
                <Label text="%dialogs.underConstruction">
                    <styleClass><String fx:value="label"/><String fx:value="warning"/></styleClass>
                </Label>
                <Label text="%dialogs.message">
                    <styleClass><String fx:value="label"/><String fx:value="message"/></styleClass>
                </Label>

                <HBox spacing="10">
                    <styleClass><String fx:value="action-area"/></styleClass>
                    <children>
                        <Button text="%dialogs.simple.show" onAction="#showSimpleDialog" />
                    </children>
                </HBox>

            </children>
        </VBox>
    </content>
</ScrollPane>
